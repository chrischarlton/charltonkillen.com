<div class="thoughts-grid">
  {%- for thought in collections.thoughts | reverse -%}
    <a href="{{ thought.url }}" class="thought-card">
      <div class="thought-visual {% if thought.data.image %}has-image{% else %}colour-only{% endif %}" 
           {% if thought.data.image %}style="background-image: url('{{ thought.data.image }}');"{% endif %}
           {% if thought.data.color and not thought.data.image %}style="background-color: {{ thought.data.color }};"{% endif %}>
        {% if thought.data.image %}
          <img src="{{ thought.data.image }}" alt="{{ thought.data.title }}" loading="lazy">
        {% endif %}
      </div>
      <div class="thought-content">
        <div class="thought-date">{{ thought.date | date: "%-d %B %Y" }}</div>
        <h2 class="thought-title">{{ thought.data.title }}</h2>
        {% if thought.data.description %}
          <p class="thought-excerpt">{{ thought.data.description }}</p>
        {% endif %}
      </div>
    </a>
  {%- endfor -%}
</div>
